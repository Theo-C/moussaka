<div class="mt-10">
    <!-- song list header -->
    <div class="flex text-gray-600">
        <div class="p-2 w-8 flex-shrink-0"></div>
        <div class="p-2 w-8 flex-shrink-0"></div>
        <div class="p-2 w-full">Nom de la playlist</div>
        <div class="p-2 w-32 flex-shrink-0 text-right">Action</div>

    </div>
        {% for playlist in playlists %}

        <div class="flex border-b border-gray-800 hover:bg-green-700/25">
            <div class="p-3 w-8 flex-shrink-0">🎧</div>
            <div class="p-3 w-full">{{ playlist.name }}</div>
                <div class="p-3 w-32 flex-shrink-0 text-right"><a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">✍️Modifier</a></div>
        </div>
        {% else %}
        <div class="flex border-b border-gray-800 hover:bg-gray-800">
            <p>Aucune playlist</p>
        </div>
        {% endfor %}
    </div>

     <button class="bg-teal-700/70 hover:bg-teal-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200 p-2 m-2"><a href="{{ path('app_playlist_new') }}">Créer une playlist</a></button>
